<p id="notice"><%= notice %></p>

<h1>Posts</h1>
 <%= link_to('Logout', destroy_user_session_path, method: :delete) %> 
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Client</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.client.fname %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <div class="field">
          <%= post.label :teeager %>
          <%= collection_select(:post, :teenager_id, Teenager.all, :id, :fname) %>
        </div>
        
        <div class="actions">
          <%= post.submit %>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
