    <h1 class="text-center">Browse posts</h1>
    <p class="lead text-center">Use following search box to find posts that fits you better</p>
  </div>

  <div class="container">
    <%= form_tag(posts_path, method: :get) do %>

      <div class="row">
        <div class="form-group col-xs-12 col-sm-6">
          <%= text_field_tag :description, params[:description], class: "form-control", placeholder: "Keyword: job title, description, or requirements" %>
        </div>

        <div class="form-group col-xs-12 col-sm-6">
          <%= text_field_tag :address, params[:address], class: "form-control", placeholder: "Location: city, state or zip" %>
        </div>

        <div class="form-group col-xs-12 col-sm-6">
          <%= collection_select(:post, :service_category_ids, ServiceCategory.order(:title), :id, :title, {}, {class: 'form-control selectpicker'}) %>
        </div>

        <div class="form-group col-xs-12 col-sm-6">
          <%= grouped_collection_select(:post, :service_type_ids, ServiceCategory.order(:title), :service_types, :title, :id, :title, {}, {class: 'form-control selectpicker'}) %>
