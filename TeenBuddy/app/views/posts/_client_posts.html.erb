
<%= render 'home/header_client' %>

<header class="page-header bg-img size-lg" style="background-image: url(／assets/img/bg-banner1.jpg)">
  <div class="container no-shadow">
    <h1 class="text-center">Manage jobs</h1>
    <p class="lead text-center">Here's the list of your submitted jobs. You can edit or delete them, or even add a new one.</p>
  </div>
</header>

<p id="notice"><%= notice %></p>


<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Client</th>
    <th>Description</th>
    <th>Work Address</th>
    <th>Pay</th>
    <th>Teenager Needed</th>
    <th>Post Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= "#{post.client.fname} #{post.client.lname}" %></td>
        <td><%= post.description %></td>
        <td><%= post.work_address %></td>
        <td><a>$</a><%= post.pay %></td>
        <td><%= post.number_of_teenager_needed %></td>
        <td><%= post.post_status %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<main>
  <section class="no-padding-top bg-alt">
    <div class="container">
      <div class="row">

        <div class="col-xs-12 text-right">
          <br>
          <%= link_to 'Post a Service' , new_post_path, class: 'btn btn-primary btn-sm' %>
        </div>

        <% @posts.order(:updated_at).reverse.each do |post| %>
            <div class="col-xs-12">
              <div class="item-block">
                <header>
                  <a href="company-detail.html"><img src="assets/img/logo-google.jpg" alt=""></a>
                  <div class="hgroup">
                    <h4><%= post.title %></h4>
                    <h5><%= post.description %></h5>
                  </div>
                  <div class="header-meta">
                    <span class="location"><%= post.work_address %></span>
                    <time datetime=<%= post.created_at %>>Updated at <%= post.created_at %></time>
                  </div>
                </header>

                <footer>
                  <p class="status"><strong>Status: </strong><%= post.post_status %></p>

                  <div class="action-btn">
                    <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-xs btn-gray'%>
                    <%= link_to 'Destroy', { action: :destroy, id: post.id }, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger'  %>
                  </div>
                </footer>
              </div>
            </div>
        <% end %>
        
      </div>
    </div>
  </section>
</main>