
<header class="page-header bg-img" style="background-image: url(assets/img/bg-banner1.jpg);">
  <div class="container page-name">
    <h1 class="text-center">Manage your posted jobs</h1>
    <p class="lead text-center">Here's the list of your submitted jobs. You can edit or delete them, or even add a new one.</p>
  </div>
  <div class="container">
    <p id="notice"><%= notice %></p>
  </div>
</header>


<main>
  <section class="no-padding-top bg-alt">
    <div class="container">
      <div class="row">

        <div class="col-xs-12 text-right">
          <br>
          <%= link_to 'Post a Service' , new_post_path, class: 'btn btn-primary btn-sm' %>
        </div>

        <% @posts.each do |post| %>
            <div class="col-xs-12">
              <div class="item-block">
                <header>
                  <a href="company-detail.html"><img src="assets/img/logo-google.jpg" alt=""></a>
                  <div class="hgroup">
                    <h4><%= post.title %></h4>
                    <h5>Description</h5>
                    <p><%= post.description %></p>
                    <% if post.requirements %>
                      <h5>Requirements</h5>
                      <p><%= post.requirements %></p>
                  <% end %>
                  </div>
                  <div class="header-meta">
                    <span class="location"><%= post.work_address %></span>
                    <time datetime=<%= post.updated_at %>>Updated at <%= post.updated_at.in_time_zone('Eastern Time (US & Canada)').strftime("%b %d %Y %H:%M") %></time>
                  </div>
                </header>

                <footer>
                  <p class="status"><strong>Status: </strong><%= post.status %></p>

                  <div class="action-btn">
                    <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-xs btn-gray'%>
                    <%= link_to 'Delete', { action: :destroy, id: post.id }, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger'  %>
                  </div>
                </footer>
              </div>
            </div>
        <% end %>
      </div>
      <!-- Page navigation -->
      <nav class="text-center">
        <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
      </nav>
      <div id="order-by">
        <form>
          <select name="sort">
            <option value="updated_at">Update Time</option>
            <option value="created_at">Create Time</option>
            <option value="title">Title</option>
          </select>

          <input type="submit" value="Sort"/>
        </form>
      </div>
      <!-- END Page navigation -->
    </div>
  </section>
</main>