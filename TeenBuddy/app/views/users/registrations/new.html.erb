<main>
  <body class="login-page">
  <row>

    <% if params[:role].presence %>
        <% if params[:role] == 'teenager' %>
            <%= render 'users/registrations/teenager_signup' %>
        <% elsif params[:role] == 'client' %>
            <%= render 'users/registrations/client_signup' %>
        <% end %>
    <% else %>
        <% if !resource.role %>
            <%= render 'users/registrations/userType_select' %>
        <% elsif resource.role == 'teenager' %>
            <%= render 'users/registrations/teenager_signup' %>
        <% elsif resource.role == 'client' %>
            <%= render 'users/registrations/client_signup' %>

        <% end %>
    <% end %>




    <!--if registration type is tennager -->

    <div class="login-links">
      <%= link_to "Forgot password?", new_password_path(resource_name), class: "pull-left" %>
      <%= link_to "Already Have an account?", new_user_session_path, class: "pull-right" %>
    </div>

  </row>
  </body>
</main>


