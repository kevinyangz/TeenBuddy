<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Home address</th>
      <th>Home phone</th>
      <th>Cell phone</th>
      <th>Number of Posts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.fname %></td>
        <td><%= client.lname %></td>
        <td><%= client.home_address %></td>
        <td><%= client.home_phone %></td>
        <td><%= client.cell_phone %></td>
        <td><%= Post.where(client: client.id).count() %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

