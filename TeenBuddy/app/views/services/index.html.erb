
<header class="page-header bg-img" style="background-image: url(/assets/img/service.jpg);">
  <div class="container page-name">
    <h1 class="text-center">Manage your jobs</h1>
    <p class="lead text-center">Here's the list of your jobs. You can update status of job you enrolled.</p>
  </div>
  <div class="container">

    <%= form_tag(services_applications_path, method: :get) do %>

        <div class="row">

          <div class="form-group col-xs-12 col-sm-4">
            <h6>job title</h6>
            <% if current_user.client %>
                <%= select_tag :post, options_from_collection_for_select(Post.where(:client_id => current_user.client.id), "id", "title", params[:post]), {:include_blank => 'All',class: 'form-control selectpicker'} %>
            <% elsif current_user.teenager %>
                <%= select_tag :post, options_from_collection_for_select(Service.where(:teenager_id => current_user.teenager.id), "post_id", "post_title", params[:post]), {:include_blank => 'All',class: 'form-control selectpicker'} %>
            <%end%>
          </div>

          <div class="form-group col-xs-12 col-sm-4">
            <h6>status</h6>
            <%= select_tag :status, options_for_select([[ "Pending", :applied],["Approved", :enrolled],["Declined", :rejected]], params[:status]), {:include_blank => 'All', class: 'form-control selectpicker'} %>
          </div>

          <div class="form-group col-xs-12 col-sm-4">
            <h6>Order by</h6>
            <%= select_tag :order, options_for_select(['status','apply time'], params[:order]), {class: 'form-control selectpicker'} %>
          </div>

        </div>

        <div class="button-group">
          <div class="action-buttons">
            <%= submit_tag("Apply filter", class: 'btn btn-primary') %>
          </div>
        </div>

    <%end%>
  </div>
</header>


<main>
  <section class="no-padding-top bg-alt">
    <%if notice%>
        <div class="container">
          <div class="alert alert-info">
            <strong>Heads up!</strong> <%= notice %>
          </div>
        </div>
    <%end%>

    <div class="container">
      <h5>We found <strong><%= @services.count %></strong> matches</h5>
    </div>
    <div class="container">
      <div class="row">


        <% @services.each do |service| %>
            <%= javascript_tag do %>
          productsURL = '<%="rating-0#{service.id}" %>';
        <% end %>
            <div class="col-xs-12">
              <div class="item-block">
                <header>
                  <a href="company-detail.html"><img src="assets/img/logo-google.jpg" alt=""></a>
                  <div class="hgroup">
                    <%= link_to  "#{service.post.title}", service.post, class: 'h4'%>
                    <h5><label class= "btn btn-xs <%=status_style2(service.status)%>"> <%= status_text2(service.status) %> </label></h5>

                  </div>
                  <div class="header-meta">
                    <span class="location"><%= service.post.work_address %></span>
                    <time datetime=<%= service.post.updated_at %>>Updated at <%= service.post.updated_at.in_time_zone('Eastern Time (US & Canada)').strftime("%b %d %Y %H:%M") %></time>
                    <%if service.client_rating!=nil%>
                    <%=service.client_rating%>
                    <%=service.client_review%>

                    <%end%>
                  </div>
                </header>

                <footer>
                  <p class="status"><strong>Updated at </strong><%= service.updated_at %></p>

                  <div class="action-btn">
                    <%if service.enrolled?%>
                    <%= link_to 'Chat with Client', '#', :class => 'btn btn-success', 'data-toggle' => 'modal', 
                    'data-target' =>  "#messageModal#{service.id}" %>
                    <%=link_to('Finish',  service_path(service, :service => {:status => :finished}), :method => :put, data: {confirm: "Are you sure?"}, class: 'btn btn-xs btn-success')%>
    
                  <%end%>
    

                  </div>
                </footer>
              </div>
            </div>
        <% end %>
      </div>
      <!-- Page navigation -->
      <nav class="text-center">
        <%= will_paginate @services, renderer: BootstrapPagination::Rails %>
      </nav>
      <!-- END Page navigation -->
    </div>
  </section>
</main>

<% @services.each do |service| %>

<div id=<%= "messageModal#{service.id}" %> class="modal fade" role="dialog"> 
      <div class="modal-dialog">
        <div class="modal-content">
          <%= form_for :service, url:service_path(service),:method =>:PUT do |form| %>
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Apply this job.</h4>
              </div>
              <div class="modal-body">
                <div class="form-group">
    <label>RATEMY</label>

      <fieldset>
    <span class="star-cb-group test">
      <input type="radio" id=<%="rating-5:#{service.id}"%> name="rating" value="5" /><label for=<%="rating-5:#{service.id}"%>>5</label>
      <input type="radio" id=<%="rating-4:#{service.id}"%> name="rating" value="4" /><label for=<%="rating-4:#{service.id}"%>>4</label>
      <input type="radio" id=<%="rating-3:#{service.id}"%> name="rating" value="3" /><label for=<%="rating-3:#{service.id}"%>>3</label>
      <input type="radio" id=<%="rating-2:#{service.id}"%> name="rating" value="2" /><label for=<%="rating-2:#{service.id}"%>>2</label>
      <input type="radio" id=<%="rating-1:#{service.id}"%> name="rating" value="1" /><label for=<%="rating-1:#{service.id}"%>>1</label>
      <input type="radio" id=<%="rating-0:#{service.id}"%> name="rating" value="0" class="star-cb-clear" /><label for="<%="rating-1#{service.id}"%>">0</label>
    </span>
    <br>
  </fieldset>
                  <%= form.text_area :client_rating, :id=>"email_field#{service.id}" ,class: "form-control", placeholder: "Rate your client " %>
                  <%= form.text_area :client_review, class: "form-control", placeholder: "Any comments" %>
                 </div>





   </div>

              <div class="modal-footer">
                <%= form.submit 'Submit', :class => "btn btn-success" %>

                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
          <% end %>
        </div>
      </div>
    </div>
    <%end%>


      

