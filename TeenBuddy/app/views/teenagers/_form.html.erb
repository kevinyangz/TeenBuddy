<%= form_with(model: teenager, local: true) do |form| %>
     <header class="page-header bg-img size-lg" style="background-image: url(/assets/img/bg-banner1.jpg)">
      <div class="container page-name">
        <h1 class="text-center"><%= @post_form_header_title %></h1>
        <p class="lead text-center"><%= @post_form_header_description %></p>
      </div>
      <div class="container">
      <div class="row">



    <% if teenager.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(teenager.errors.count, "error") %> prohibited this teenager from being saved:</h2>

          <ul>
            <% teenager.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


     <div class="form-group col-xs-12 col-sm-12">
      <%= form.text_field :fname, placeholder: 'First Name', class: 'form-control input-lg' %>
    </div>

     <div class="form-group col-xs-12 col-sm-12">
      <%= form.text_field :lname, placeholder: 'Last Name', class: 'form-control input-lg' %>
    </div>

     <div class="form-group col-xs-12 col-sm-12">
      <%= form.text_field :home_address,  id: :teenager_home_address, placeholder: 'Home Address', class: 'form-control input-lg' %>
    </div>

     <div class="form-group col-xs-12 col-sm-12">
      <%= form.text_field :postal_code, placeholder: 'Please enter your Postal Code ', class: 'form-control input-lg' %>
    </div>

  
     <div class="form-group col-xs-12 col-sm-12">
      <%= form.text_field :cell_phone, placeholder: 'Please enter your Cell Phone Number', class: 'form-control input-lg' %>
    </div>

     <div class="form-group col-xs-12 col-sm-12">
      <%= form.select :service_category_ids, ServiceCategory.all.collect {|x| [x.title, x.id]}, {}, :multiple => true ,
       :prompt => 'Please select service category',class: 'form-control selectpicker' %>
          </div>

     <div class="form-group col-xs-12 col-sm-12">
      <%= form.date_field :birth_date, placeholder: 'Please enter your Postal Code ', class: 'form-control input-lg' %>
    </div>
</div>
</div>
</header>

 <section class="bg-alt">
      <div class="container">
        <header class="section-header">
          <h1>Are you done?</h1>
          <p>Please review your information once more and press the below button to put your post online.</p>
        </header>
        <div class="actions">
          <p class="text-center">
            <%= form.submit class: 'btn btn-success btn-xl btn-round' %>
          </p>
        </div>
      </div>
    </section>

<% end %>
