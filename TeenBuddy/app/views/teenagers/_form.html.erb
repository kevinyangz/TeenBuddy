<%= form_with(model: teenager, local: true) do |form| %>
     <header class="page-header bg-img size-lg" style="background-image: url(/assets/img/bg-banner1.jpg)">
      <div class="container page-name">
        <h1 class="text-center">Detail Information</h1>
        <p class="lead text-center">Please complete the form with detailed infomation</p>
      </div>
      <div class="container">
        <font color = 'red'> <%= teenager.errors.full_messages.first %></font>
      <div class="row">

     <div class="form-group col-md-6 col-sm-12">
       <h6>First Name</h6>
      <%= form.text_field :fname, class: 'form-control input-lg' %>
    </div>

     <div class="form-group col-md-6 col-sm-12">
       <h6>Last Name</h6>
      <%= form.text_field :lname, class: 'form-control input-lg' %>
    </div>

        <div class="form-group col-md-6 col-sm-12">
          <h6>Birthday</h6>
          <%= form.date_field :birth_date, placeholder: 'Birthday ', class: 'form-control input-lg' %>
        </div>

        <div class="form-group col-md-6 col-sm-12">
       <h6>Home Address</h6>
      <%= form.text_field :home_address,  id: :teenager_home_address,  class: 'form-control input-lg' %>
    </div>

     <div class="form-group col-md-6 col-sm-12">
       <h6>Postal Code</h6>
      <%= form.text_field :postal_code,id: :postal_code, class: 'form-control input-lg' %>
    </div>

     <div class="form-group col-md-6 col-sm-12">
       <h6>Cell Phone</h6>
      <%= form.text_field :cell_phone, class: 'form-control input-lg' %>
    </div>

     <div class="form-group col-md-6 col-sm-12">
       <h6>Interests</h6>
      <%= form.select :service_category_ids, ServiceCategory.all.collect {|x| [x.title, x.id]}, {}, :multiple => true ,
       :prompt => 'Please select service category',class: 'form-control selectpicker' %>
          </div>

     <div class="form-group col-md-6 col-sm-12">
             <h6>Upload your Selfie</h6>
      <%= form.file_field :selfie, placeholder: 'Please enter your BirthDate yyyy/mm/dd ', class: 'form-control' %>
    </div>

</div>
</div>
</header>

 <section class="bg-alt">
      <div class="container">
        <header class="section-header">
          <h1>Are you done?</h1>
          <p>Please review your information once more and press the below button to put your post online.</p>
        </header>
        <div class="actions">
          <p class="text-center">
            <%= form.submit 'Submit', class: 'btn btn-success btn-xl btn-round' %>
          </p>
        </div>
      </div>
    </section>

<% end %>




