<%= form_with(model: teenager, local: true) do |form| %>
     <header class="page-header bg-img size-lg" style="background-image: url(/assets/img/bg-banner1.jpg)">
      <div class="container page-name">
        <h1 class="text-center">Detail Information</h1>
        <p class="lead text-center">Please complete the form with detailed infomation</p>
      </div>
      <div class="container">
        <font color = 'red'> <%= teenager.errors.full_messages.first %></font>
      <div class="row">

     <div class="form-group col-md-6 col-sm-12">
       <h6>First Name</h6>
      <%= form.text_field :fname, class: 'form-control input-lg' %>
    </div>

     <div class="form-group col-md-6 col-sm-12">
       <h6>Last Name</h6>
      <%= form.text_field :lname, class: 'form-control input-lg' %>
    </div>

        <div class="form-group col-md-6 col-sm-12">
          <h6>Birthday</h6>
          <%= form.date_field :birth_date, placeholder: 'Birthday ', class: 'form-control input-lg' %>
        </div>

        <div class="form-group col-md-6 col-sm-12">
       <h6>Home Address</h6>

    </div>

     <div class="form-group col-md-6 col-sm-12">
       <h6>Postal Code</h6>
      <%= form.text_field :postal_code,id: :postal_code, class: 'form-control input-lg' %>
    </div>

     <div class="form-group col-md-6 col-sm-12">
       <h6>Cell Phone</h6>
      <%= form.text_field :cell_phone, class: 'form-control input-lg' %>
    </div>

     <div class="form-group col-md-6 col-sm-12">
       <h6>Interests</h6>
      <%= form.select :service_category_ids, ServiceCategory.all.collect {|x| [x.title, x.id]}, {}, :multiple => true ,
       :prompt => 'Please select service category',class: 'form-control selectpicker' %>
          </div>

     <div class="form-group col-md-6 col-sm-12">
             <h6>Upload your Selfie</h6>
      <%= form.file_field :selfie, placeholder: 'Please enter your BirthDate yyyy/mm/dd ', class: 'form-control' %>
    </div>

</div>
</div>
</header>

    <!-- Page header -->
    <header class="page-header bg-img size-lg" style="background-image: url(/assets/img/bg-banner1.jpg)">
      <div class="container page-name">
        <h1 class="text-center">Detail Information</h1>
        <p class="lead text-center">Please complete the form with detailed infomation</p>
      </div>

      <div class="container">

          <p><font color = 'red'> <%= teenager.errors.full_messages.first %></font>Here is the errors.</p>


        <div class="row">
          <div class="col-xs-12 col-sm-4">
            <div class="form-group">
              <input type="file" class="dropify" data-default-file="assets/img/avatar.jpg">
              <span class="help-block">Please choose a 4:6 profile picture.</span>
            </div>
          </div>


          <div class="col-xs-12 col-sm-8">
            <div class="row">
            <div class="form-group col-xs-12 col-sm-6">
<h6>First Name</h6>
              <%= form.text_field :fname, class: 'form-control input-lg' %>
            </div>

            <div class="form-group col-xs-12 col-sm-6">
              <h6>Last Name</h6>
              <%= form.text_field :lname, class: 'form-control input-lg' %>
            </div>

            <div class="form-group col-md-12">
              <textarea class="form-control" rows="3" placeholder="Short description about you"></textarea>
            </div>

            <hr class="hr-lg">
            </div>
            <h6>Basic information</h6>
            <div class="row">

              <div class="form-group col-xs-12 col-sm-6">
                <div class="input-group input-group-sm">
                  <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
                  <%= form.text_field :home_address,  id: :teenager_home_address, placeholder:"Location, e.g. Melon Park, CA",  class: 'form-control input-lg' %>
                </div>
              </div>

              <div class="form-group col-xs-12 col-sm-6">
                <div class="input-group input-group-sm">
                  <span class="input-group-addon"><i class="fa fa-globe"></i></span>
                  <input type="text" class="form-control" placeholder="Website address">
                </div>
              </div>

              <div class="form-group col-xs-12 col-sm-6">
                <div class="input-group input-group-sm">
                  <span class="input-group-addon"><i class="fa fa-usd"></i></span>
                  <input type="text" class="form-control" placeholder="Salary, e.g. 85">
                  <span class="input-group-addon">Per hour</span>
                </div>
              </div>

              <div class="form-group col-xs-12 col-sm-6">
                <div class="input-group input-group-sm">
                  <span class="input-group-addon"><i class="fa fa-birthday-cake"></i></span>

                    <%= form.date_field :birth_date, placeholder: 'Birthday ', class: 'form-control input-lg' %>
                </div>
              </div>

              <div class="form-group col-xs-12 col-sm-6">
                <div class="input-group input-group-sm">
                  <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                  <input type="text" class="form-control" placeholder="Phone number">
                </div>
              </div>

              <div class="form-group col-xs-12 col-sm-6">
                <div class="input-group input-group-sm">
                  <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                  <input type="text" class="form-control" placeholder="Email address">
                </div>
              </div>

            </div>

            <hr class="hr-lg">

            <h6>Tags list</h6>
            <div class="form-group">
              <input type="text" value="HTML,CSS,Javascript" data-role="tagsinput" placeholder="Tag name">
              <span class="help-block">Write tag name and press enter</span>
            </div>

          </div>
        </div>

        <div class="button-group">
          <div class="action-buttons">

            <div class="upload-button">
              <button class="btn btn-block btn-gray">Choose a resume file</button>
              <input type="file">
            </div>

            <div class="upload-button">
              <button class="btn btn-block btn-primary">Choose a cover image</button>
              <input id="cover_img_file" type="file">
            </div>

          </div>
        </div>
      </div>
    </header>

 <section class="bg-alt">
      <div class="container">
        <header class="section-header">
          <h1>Are you done?</h1>
          <p>Please review your information once more and press the below button to put your post online.</p>
        </header>
        <div class="actions">
          <p class="text-center">
            <%= form.submit 'Submit', class: 'btn btn-success btn-xl btn-round' %>
          </p>
        </div>
      </div>
    </section>

<% end %>




