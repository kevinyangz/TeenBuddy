<h1>Teenagers</h1>

<table>
  <thead>
    <tr>
      <th>Email Address</th>
      <th>First Name</th>
      <th>Last  Name</th>
      <th>Home address</th>
      <th>Postal Code</th>
      <th>Cell phone</th>
      <th>Birth date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teenagers.each do |teenager| %>
      <tr>
        <td><%= teenager.email_address %></td>
        <td><%= teenager.fname %></td>
        <td><%= teenager.lname %></td>
        <td><%= teenager.home_address %></td>
        <td><%= teenager.postal_code %></td>
        <td><%= teenager.cell_phone %></td>
        <td><%= teenager.birth_date %></td>
        <td><%= link_to 'Show', teenager %></td>
        <td><%= link_to 'Edit', edit_teenager_path(teenager) %></td>
        <td><%= link_to 'Destroy', teenager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

